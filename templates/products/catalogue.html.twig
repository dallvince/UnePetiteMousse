{% extends "base.html.twig" %}

{% block title %}{{ parent()}} | Catalogue{% endblock %}

{% block h1 %}Catalogue des produits{% endblock %}

{% block body %}
<div class="row col-11 m-auto">

    <div class="shadow col-md-2 ms-4 px-3 py-2 form-filters">
        <h4>Filtres</h4>
    {{ form_start(formFilter) }}

        {{ form_row(formFilter.search) }}

        {{ form_row(formFilter.brewry) }}

        {{ form_row(formFilter.country) }}

        {{ form_row(formFilter.style) }}

        {{ form_row(formFilter.minPrice) }}
        {{ form_row(formFilter.maxPrice) }}

        {{ form_row(formFilter.order) }}

        <input type="submit" value="Rechercher" class="btn btn-primary mt-2">

    {{ form_end(formFilter) }}
    </div>

    <div class="row justify-content-center col-md-9">
        {% for product in products %}
            <div class="shadow col-md-3 m-4 p-4">
                <h3 class="text-center">{{ product.name|capitalize }}</h3>
                <div class="text-center">
                    {% if product.picture %}
                        <img src="{{ asset('img/upload/' ~ product.picture) }}" alt="" class="img150">
                    {% else %}
                        <img src="{{ asset('img/beer-default.png')}}" alt="" class="img150">
                    {% endif %}
                </div> 

                <h4 class="text-center">{{ product.price }} â‚¬</h4>
                <div class="text-center">
                    <a href="{{ path("fiche_produit", {"id" : product.id}) }}">
                        <i class="text-warning" data-feather="eye"></i>
                    </a>  
                </div>
            </div>
            {% else %}
            <h4 class="text-center">Il n'y a plus de biÃ¨res disponibles ðŸ˜”</h4>
        {% endfor %}
    </div>

</div>

{% endblock %}