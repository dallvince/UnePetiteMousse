{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{# {% block h1 %}Bonjour, {{ users.pseudo }}{% endblock %} #}

{% block body %}

    <div class="d-flex table-responsive">
    <table class="table table-striped table-hover text-center mt-3 mx-5 m-auto">
        <thead class="bg-dark text-white">
        <thead>
            <tr>
                <th>Pseudo</th>
                <th>Email</th>
                <th>Adresse</th>
                <th>CP</th>
                <th>Info</th>
                <th>Avatar</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ users.pseudo|upper }}</td>
                <td>{{ users.email }}</td>
                <td>{{ users.adress }}</td>
                <td>{{ users.zip }}</td>
                <td>{{ users.info }}</td>

                <td>
                    {% if users.avatar %}
                        <img src="{{ asset('img/upload/' ~ users.avatar) }}" alt="" class="img80">
                    {% else %}
                        <img src="{{ asset('img/imageDefault.png') }}" alt="" class="img80">
                    {% endif %}
                    </td>
            </tr>
        </tbody>
    </table>
    </div>

    <a href="{{ path('app_profil_edit', {'id': users.id}) }}"><button type="submit" class="btn btn-success">Modifier</button></a>

{% endblock %}
