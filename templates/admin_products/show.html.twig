{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
    <h1>Products</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ product.picture }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Abv</th>
                <td>{{ product.abv }}</td>
            </tr>
            <tr>
                <th>Ebc</th>
                <td>{{ product.ebc }}</td>
            </tr>
            <tr>
                <th>Glutenfree</th>
                <td>{{ product.glutenfree }}</td>
            </tr>
            <tr>
                <th>Organic</th>
                <td>{{ product.organic }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_products_index') }}">back to list</a>

    <a href="{{ path('app_admin_products_edit', {'id': product.id}) }}">edit</a>

    {{ include('admin_products/_delete_form.html.twig') }}
{% endblock %}
